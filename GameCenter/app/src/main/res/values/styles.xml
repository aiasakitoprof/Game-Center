<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DotStyle">
        <item name="android:layout_width">47dp</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:background">@drawable/corners_grid</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="GridLayoutTextInvisible">
        <item name="android:layout_width">47dp</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:background">@drawable/corners_grid</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">invisible</item>
    </style>
    <style name="EmptyDot">
        <item name="android:layout_width">47dp</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:background">@drawable/empty_tile_senku</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="EmptyTile">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/empty_tile_2048</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/aurebesh</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:text"></item>
    </style>
    <style name="TileStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tile_2048</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/aurebesh</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">70dp</item>
    </style>
    <style name="FrameStyle">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:background">@drawable/empty_tile_2048</item>
    </style>
</resources>